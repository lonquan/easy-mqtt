# MQTT 配置示例
# 复制此文件到 .env 并根据您的需求进行修改

# 默认连接
MQTT_CONNECTION=local

# 本地开发环境配置
MQTT_HOST=127.0.0.1
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID_PREFIX=app_
MQTT_CLIENT_ID=

# 连接设置
MQTT_USE_BLOCKING_SOCKET=false
MQTT_CONNECT_TIMEOUT=60
MQTT_SOCKET_TIMEOUT=5
MQTT_RESEND_TIMEOUT=10
MQTT_RECONNECT_AUTOMATICALLY=false
MQTT_MAX_RECONNECT_ATTEMPTS=3
MQTT_DELAY_BETWEEN_RECONNECT_ATTEMPTS=0
MQTT_KEEP_ALIVE_INTERVAL=10

# 遗嘱消息配置
MQTT_LAST_WILL_TOPIC=
MQTT_LAST_WILL_MESSAGE=
MQTT_LAST_WILL_QOS=0
MQTT_RETAIN_LAST_WILL=false

# TLS/SSL 配置
MQTT_USE_TLS=false
MQTT_TLS_VERIFY_PEER=true
MQTT_TLS_VERIFY_PEER_NAME=true
MQTT_TLS_SELF_SIGNED_ALLOWED=false
MQTT_TLS_CA_FILE=
MQTT_TLS_CA_PATH=
MQTT_TLS_CLIENT_CERT_FILE=
MQTT_TLS_CLIENT_KEY_FILE=
MQTT_TLS_CLIENT_KEY_PASSPHRASE=
MQTT_TLS_ALPN=

# Repository 配置
MQTT_REPOSITORY_CLASS=

# 生产环境配置
MQTT_PROD_HOST=mqtt.production.com
MQTT_PROD_PORT=8883
MQTT_PROD_USERNAME=your_prod_username
MQTT_PROD_PASSWORD=your_prod_password
MQTT_PROD_CLIENT_ID=
MQTT_PROD_USE_BLOCKING_SOCKET=false
MQTT_PROD_CONNECT_TIMEOUT=60
MQTT_PROD_SOCKET_TIMEOUT=5
MQTT_PROD_RESEND_TIMEOUT=10
MQTT_PROD_RECONNECT_AUTOMATICALLY=true
MQTT_PROD_MAX_RECONNECT_ATTEMPTS=5
MQTT_PROD_DELAY_BETWEEN_RECONNECT_ATTEMPTS=1000
MQTT_PROD_KEEP_ALIVE_INTERVAL=10
MQTT_PROD_LAST_WILL_TOPIC=status/offline
MQTT_PROD_LAST_WILL_MESSAGE=offline
MQTT_PROD_LAST_WILL_QOS=1
MQTT_PROD_RETAIN_LAST_WILL=true
MQTT_PROD_USE_TLS=true
MQTT_PROD_TLS_VERIFY_PEER=true
MQTT_PROD_TLS_VERIFY_PEER_NAME=true
MQTT_PROD_TLS_SELF_SIGNED_ALLOWED=false
MQTT_PROD_TLS_CA_FILE=/path/to/ca.crt
MQTT_PROD_TLS_CA_PATH=/path/to/ca/directory
MQTT_PROD_TLS_CLIENT_CERT_FILE=/path/to/client.crt
MQTT_PROD_TLS_CLIENT_KEY_FILE=/path/to/client.key
MQTT_PROD_TLS_CLIENT_KEY_PASSPHRASE=
MQTT_PROD_TLS_ALPN=

# 测试环境配置
MQTT_TEST_HOST=127.0.0.1
MQTT_TEST_PORT=1883
MQTT_TEST_USERNAME=
MQTT_TEST_PASSWORD=
MQTT_TEST_CLIENT_ID=
MQTT_TEST_USE_BLOCKING_SOCKET=false
MQTT_TEST_CONNECT_TIMEOUT=30
MQTT_TEST_SOCKET_TIMEOUT=5
MQTT_TEST_RESEND_TIMEOUT=10
MQTT_TEST_RECONNECT_AUTOMATICALLY=false
MQTT_TEST_MAX_RECONNECT_ATTEMPTS=3
MQTT_TEST_DELAY_BETWEEN_RECONNECT_ATTEMPTS=0
MQTT_TEST_KEEP_ALIVE_INTERVAL=30
MQTT_TEST_LAST_WILL_TOPIC=
MQTT_TEST_LAST_WILL_MESSAGE=
MQTT_TEST_LAST_WILL_QOS=0
MQTT_TEST_RETAIN_LAST_WILL=false
MQTT_TEST_USE_TLS=false
MQTT_TEST_TLS_VERIFY_PEER=true
MQTT_TEST_TLS_VERIFY_PEER_NAME=true
MQTT_TEST_TLS_SELF_SIGNED_ALLOWED=false
MQTT_TEST_TLS_CA_FILE=
MQTT_TEST_TLS_CA_PATH=
MQTT_TEST_TLS_CLIENT_CERT_FILE=
MQTT_TEST_TLS_CLIENT_KEY_FILE=
MQTT_TEST_TLS_CLIENT_KEY_PASSPHRASE=
MQTT_TEST_TLS_ALPN=
